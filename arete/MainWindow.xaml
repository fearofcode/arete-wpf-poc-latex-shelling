<Window x:Class="arete.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arete"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="800"
        Width="1024">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Name="LatexPageButton"
                        Content="LaTeX"
                        Click="LatexPageButton_Click" />
            </ToolBar>
            <ToolBar>
                <Button Name="CodePageButton"
                        Content="Python Evaluation"
                        Click="CodePageButton_Click" />
            </ToolBar>
            <ToolBar>
                <Button Name="DatabasePageButton"
                        Content="PG Dump"
                        Click="DatabasePageButton_Click" />
            </ToolBar>
            
        </ToolBarTray>
        <Frame Name="Main"
               NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
